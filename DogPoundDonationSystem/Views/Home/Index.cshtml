@{
    ViewData["Title"] = "Welcome!";
}

<div class="d-flex justify-content-center">
    <div id="carouselExample" class="carousel slide w-50">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img width="640" height="360" src="~/images/carousel1.jpg" class="d-block" alt="Dogs">
            </div>
            <div class="carousel-item">
                <img width="640" height="360" src="~/images/carousel2.jpg" class="d-block" alt="Dogs">

            </div>
            <div class="carousel-item">
                <img width="640" height="360" src="~/images/carousel3.jpg" class="d-block" alt="Dogs">
            </div>
            <div class="carousel-item">
                <img width="640" height="360" src="~/images/carousel4.jpg" class="d-block" alt="Dogs">
            </div>
            <div class="carousel-item">
                <img width="640" height="360" src="~/images/carousel5.jpg" class="d-block" alt="Dogs">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<div class="d-flex justify-content-center mt-3 mb-2">
    <div class="w-50">
        <p class="h6 mb-2">Welcome to Dog Pound!, where every dog's life matters. Our mission is to provide a safe and loving environment for abandoned and stray dogs, giving them a second chance at finding their forever homes. Through your generous donations, we can continue to provide shelter, medical care, and rehabilitation to these furry companions in need.</p>
    </div>
</div>


<div class="d-flex justify-content-center">
    <a class="btn btn-success" asp-action="Donations">Donate Now!</a>
</div>